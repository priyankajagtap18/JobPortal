<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jobportal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.jobportal.activities.SplashAct"
            android:configChanges="keyboard|screenSize|orientation"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustResize">

        </activity>
        <activity
            android:name="com.jobportal.activities.MainActivity"
            android:configChanges="keyboard|screenSize|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustResize">

        </activity>

        <activity
            android:name="com.jobportal.activities.RegistrationAct"
            android:configChanges="keyboard|screenSize|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustResize"></activity>
        <activity
            android:name="com.jobportal.activities.LoginActivity"
            android:configChanges="keyboard|screenSize|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustResize">

        </activity>
        <activity
            android:name="com.jobportal.activities.ProfileActivity"
            android:configChanges="keyboard|screenSize|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustResize"></activity>
        <activity
            android:name="com.jobportal.activities.EditProfileActivity"
            android:configChanges="keyboard|screenSize|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustResize"></activity>
        <activity
            android:name="com.jobportal.activities.AdsPostActivity"
            android:configChanges="keyboard|screenSize|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustResize">

        </activity>
        <activity
            android:name="com.jobportal.activities.AdListActivity"
            android:configChanges="keyboard|screenSize|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustResize">

        </activity>

        <activity
            android:name="com.jobportal.activities.EditAdsActivity"
            android:configChanges="keyboard|screenSize|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustResize">

        </activity>
        <activity
            android:name="com.jobportal.activities.AdDetailsActivity"
            android:configChanges="keyboard|screenSize|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustResize"></activity>
        <activity
            android:name="com.jobportal.activities.MakePremiumActivity"
            android:configChanges="keyboard|screenSize|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustResize">
        </activity>
        <activity
            android:name="com.jobportal.activities.PinToTopActivity"
            android:configChanges="keyboard|screenSize|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustResize">

        </activity>
        <activity
            android:name="com.jobportal.activities.MessagesAndNotificationActivity"
            android:configChanges="keyboard|screenSize|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>