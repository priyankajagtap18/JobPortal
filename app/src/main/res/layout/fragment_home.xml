<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_home_blue"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_white_rectangle"
            android:drawableLeft="@android:drawable/ic_search_category_default"
            android:hint="Search jobs here(e.g Driver)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_white_rectangle"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/tv_work_from_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/bg_home_blue"
                android:drawableTop="@mipmap/ic_launcher"
                android:gravity="center"
                android:padding="5dp"
                android:text="Work From Home"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_part_time_job"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@color/bg_home_blue"
                android:drawableTop="@mipmap/ic_launcher"
                android:gravity="center"
                android:padding="5dp"
                android:text="Part time Jobs"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_full_time_jobs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@color/bg_home_blue"
                android:drawableTop="@mipmap/ic_launcher"
                android:gravity="center"
                android:padding="5dp"
                android:text="Full time Jobs"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/internship_job"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/bg_home_blue"
                android:drawableTop="@mipmap/ic_launcher"
                android:gravity="center"
                android:padding="5dp"
                android:text="Internships Job"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hire_candidates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_myplaces"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:gravity="center|left"
                android:padding="8dp"
                android:text="Click here to Hire Candidates" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/gray_text" />

            <TextView

                android:id="@+id/tv_premiun_job_seeker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_myplaces"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:gravity="center|left"
                android:padding="8dp"
                android:text="Become a Premium Job Seeker" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:padding="10dp"
        android:text="Top Roles"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/black" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_top_roles"
        android:nestedScrollingEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@drawable/bg_white_rectangle" />
</LinearLayout>