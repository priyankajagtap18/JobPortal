<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:text="Role"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/black" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sp_role"
                style="@style/spinnerGrayTHintColor"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:dropDownVerticalOffset="25dp"
                android:entries="@array/arr_role" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/colorLightGrayDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:text="Subroles"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/black" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sp_sub_role"
                style="@style/spinnerGrayTHintColor"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:dropDownVerticalOffset="25dp"
                android:entries="@array/arr_role" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/colorLightGrayDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:text="Education"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/black" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sp_education"
                style="@style/spinnerGrayTHintColor"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:dropDownVerticalOffset="25dp"
                android:entries="@array/arr_education" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/colorLightGrayDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:text="Job Type"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/black" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sp_job_type"
                style="@style/spinnerGrayTHintColor"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:dropDownVerticalOffset="25dp"
                android:entries="@array/arr_role" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/colorLightGrayDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:text="Profile Freshsess"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/black" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sp_profile_freshness"
                style="@style/spinnerGrayTHintColor"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:dropDownVerticalOffset="25dp"
                android:entries="@array/arr_profile_freshness" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/colorLightGrayDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:text="Gender"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/rbtn_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="Male"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/rbtn_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="FeMale"
                    android:textColor="@color/black" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/colorLightGrayDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:text="Salary"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/black" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sp_salary"
                style="@style/spinnerGrayTHintColor"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:dropDownVerticalOffset="25dp"
                android:entries="@array/arr_role" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/colorLightGrayDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:text="Experience"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/black" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sp_experience"
                style="@style/spinnerGrayTHintColor"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:dropDownVerticalOffset="25dp"
                android:entries="@array/arr_profile_freshness" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/colorLightGrayDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:text="Education"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/black" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sp_locality"
                style="@style/spinnerGrayTHintColor"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:dropDownVerticalOffset="25dp"
                android:entries="@array/arr_cities" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/colorLightGrayDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:text="Show Profiles"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/black" />

            <CheckBox
                android:id="@+id/cb_show_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Show only mobile verified"
                android:textColor="@color/black" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_save"
                style="@style/btn_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Apply" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>