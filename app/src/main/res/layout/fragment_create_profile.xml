<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="DESCRIBE YOUR NEED"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/black" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="6dp"
                android:theme="@style/custom_til_blue">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_name"
                    style="@style/etBlueBlack"
                    android:layout_width="match_parent"
                    android:hint="Test"
                    android:maxLength="60"
                    android:text="Name" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="6dp"
                android:theme="@style/custom_til_blue">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_mobile_no"
                    style="@style/etBlueBlack"
                    android:layout_width="match_parent"
                    android:hint="Mobile No"
                    android:maxLength="30"
                    android:text="487648327468" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="6dp"
                android:theme="@style/custom_til_blue">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_email"
                    style="@style/etBlueBlack"
                    android:layout_width="match_parent"
                    android:hint="Email"
                    android:maxLength="50"
                    android:text="" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sp_role"
                style="@style/spinnerGrayTHintColor"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:dropDownVerticalOffset="25dp"
                android:entries="@array/arr_role" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/colorLightGrayDivider" />


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sp_city"
                style="@style/spinnerGrayTHintColor"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:dropDownVerticalOffset="25dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/colorLightGrayDivider" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sp_locality"
                style="@style/spinnerGrayTHintColor"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:dropDownVerticalOffset="25dp"
                android:entries="@array/arr_locality" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/colorLightGrayDivider" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_save"
                style="@style/btn_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:text="Create Profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="You will be sent free SMS and Email Jobs Alerts for matching your Profile"
                android:textAppearance="?textAppearanceListItem"
                android:textColor="@color/colorGray" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>