<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_login_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:theme="@style/custom_til_blue">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_login_name"
                style="@style/etBlueBlack"
                android:layout_width="match_parent"
                android:hint="Name"
                android:maxLength="30" />

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatTextView
            style="@style/tvMediumLightGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:text="City" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sp_apna_service_categories"
            style="@style/spinnerGrayTHintColor"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:dropDownVerticalOffset="25dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorLightGrayDivider" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_login_mobile_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:theme="@style/custom_til_blue">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_login_mob_num"
                style="@style/etBlueBlack"
                android:layout_width="match_parent"
                android:hint="Mobile number"
                android:inputType="number"
                android:maxLength="12" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:theme="@style/custom_til_blue">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_login_email"
                style="@style/etBlueBlack"
                android:layout_width="match_parent"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLength="30" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_login_current_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:theme="@style/custom_til_blue">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_login_current_password"
                style="@style/etBlueBlack"
                android:focusable="false"
                android:editable="false"
                android:clickable="false"
                android:layout_width="match_parent"
                android:hint="Enter Current Password"
                android:inputType="textPassword"
                android:maxLength="30" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_login_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:theme="@style/custom_til_blue">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_login_new_password"
                style="@style/etBlueBlack"
                android:layout_width="match_parent"
                android:hint="Enter new Password"
                android:inputType="textPassword"
                android:maxLength="30" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_login_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:theme="@style/custom_til_blue">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_login_confirm_password"
                style="@style/etBlueBlack"
                android:layout_width="match_parent"
                android:hint="Enter Confirm Password"
                android:inputType="textPassword"
                android:maxLength="30" />

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_save"
            style="@style/btn_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
           android:layout_margin="10dp"
            android:text="Save" />
    </LinearLayout>
</ScrollView>